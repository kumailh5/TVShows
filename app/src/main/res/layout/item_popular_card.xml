<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="#fafafa"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="6dp"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:transitionName="@string/card_trans"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/card_pad_lr"
            android:paddingRight="@dimen/card_pad_lr"/>

        <TextView
            android:id="@+id/text_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="italic"
            android:paddingBottom="5dp"
            android:paddingTop="@dimen/card_pad_lr"
            android:paddingLeft="@dimen/card_pad_lr"
            android:paddingRight="@dimen/card_pad_lr"/>

        <TextView
            android:id="@+id/text_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_rating"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="italic"
            android:paddingLeft="@dimen/card_pad_lr"
            android:paddingRight="@dimen/card_pad_lr"
            android:paddingBottom="5dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>